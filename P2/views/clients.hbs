<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <title>Lista Klientów</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Lista Klientów</h2>
    <a href="/clients/add" class="btn btn-primary mb-3">Dodaj Klienta</a>
    
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Nazwa</th>
          <th>Adres</th>
          <th>NIP</th>
          <th>Firma/Osoba</th>
          <th>Akcje</th>
        </tr>
      </thead>
      <tbody>
        {{#each clients}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.nip}}</td>
            <td>{{this.companyOrPerson}}</td>
            <td>
              <a href="/clients/edit/{{this._id}}" class="btn btn-warning btn-sm">Edytuj</a>
              <form action="/clients/delete/{{this._id}}" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>
